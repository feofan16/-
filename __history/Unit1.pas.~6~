{$R *.dfm}



procedure TForm1.Button1Click(Sender: TObject);
begin
  if (Trim(Edit2.Text)='') or (Trim(Edit3.Text)='') then
begin
exit;
end;
ADOQuery2.Insert;
ADOQuery2.FieldByName('Наименование продукции').AsString:=Edit2.Text;
ADOQuery2.FieldByName('Цена').AsInteger:=StrToInt(Edit5.Text);
 ADOQuery2.FieldByName('КоличествоМест').AsInteger:=StrToInt(Edit4.Text);
ADOQuery2.FieldByName('НомерСклада').AsInteger:=StrToInt(Edit3.Text);
 ADOQuery2.FieldByName('Дата').AsDateTime:=DateTimePicker1.DateTime;











end;

procedure TForm1.DBGrid1CellClick(Column: TColumn);
begin
   Label3.Caption:='Склад № : '+ dbgrid1.Fields[0].AsString;
Label1.Caption:='Количество мест: '+ dbgrid1.Fields[4].AsString;
    Label4.Caption:='Свободных мест: '+ dbgrid1.Fields[5].AsString;
end;

procedure TForm1.Edit1DblClick(Sender: TObject);
var i:integer;
begin
edit1.Visible:=false;
i:=10;
  if Application.MessageBox('Изменить?',' ',MB_YESNO)=IDYES then  begin
  if edit1.Text <> ''  then begin
  edit1.Text:= inttostr(strtoint(edit1.Text)+i); end;
   Label1.Caption:= 'Количество мест: '+ edit1.Text;
    ADOQuery1.Edit;
ADOQuery1.FieldByName('Места').AsString:=Edit1.Text;
Adoquery1.Post;  edit1.Visible:=false;  end else exit;
end;

procedure TForm1.Edit1KeyPress(Sender: TObject; var Key: Char);
begin
if Key = #13 then begin
edit1.Visible:=false;
      if Application.MessageBox('Изменить?',' ',MB_YESNO)=IDYES then  begin
     Label1.Caption:= 'Мест всего: '+ edit1.Text;
    ADOQuery1.Edit;
ADOQuery1.FieldByName('Места').AsString:=Edit1.Text;
Adoquery1.Post;  edit1.Visible:=false;  end else exit;
end;    end;

procedure TForm1.Label1DblClick(Sender: TObject);
begin
edit1.visible:=true;
end;

end.
